int main()                         //massive with randomize
{
    int scale, min, max;
    cout<< "size massive= ";
    cin>> scale;
    cout<< "minimum  chislo= ";
    cin>> min;
    cout<< "maximum  chislo= ";
    cin>> max;  max*=1.5;
    int mult = 1;
    int x[scale];
    srand(time(0));
    int seed = rand()%1000 - 500;
    for (int i =0; i <scale;i++){
        srand(seed+i);
        x[i]= rand() %max - min;
        cout<<x[i]<<" ";
    }

    return 0;
} //////////////////////////////////////////////


#include <stdlib.h>          //sort massive
#include <iostream>
using namespace std;
int main()
{
    int i,n,t;  cout<< "n=";    cin>>n;
    cout<<endl<< "massive"<<endl;
    int *p = new int[n];
    for (i=0;i<n;i++){
        p[i]=rand()%11-5; cout<<p[i]<<" ";
    }
    for(i=0;i<n - 1;i++)
        for(int j=0;j<n- i - 1;j++){
            if(p[j]>p[j+ 1]){
                t=p[j]; p[j]=p[j+ 1];   p[j + 1]=t;
            }
        }
    cout<<"\nSort: \n";
    for(i=0;i<n;i++){cout<<p[i]<<" ";}
    delete []p;
    return 0;
}
